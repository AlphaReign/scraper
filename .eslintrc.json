{
	"env": {
		"es6": true,
		"node": true
	},
	"extends": [
		"eslint:all"
	],
	"parser": "babel-eslint",
	"parserOptions": {
		"sourceType": "module"
	},
	"rules": {
		"array-bracket-newline": "off",
		"array-element-newline": "off",
		"brace-style": "off",
		"capitalized-comments": "off",
		"class-methods-use-this": "off",
		"comma-dangle": [
			"error",
			"always-multiline"
		],
		"dot-location": [
			"error",
			"property"
		],
		"eol-last": "off",
		"global-require": "off",
		"id-length": "off",
		"indent": [
			"error",
			"tab"
		],
		"init-declarations": "off",
		"max-len": [
			"error",
			180
		],
		"max-statements-per-line": [
			"error",
			{
				"max": 2
			}
		],
		"multiline-ternary": "off",
		"newline-per-chained-call": [
			"error",
			{
				"ignoreChainWithDepth": 3
			}
		],
		"no-confusing-arrow": [
			"error",
			{
				"allowParens": true
			}
		],
		"no-console": "off",
		"no-extra-parens": "off",
		"no-magic-numbers": "off",
		"no-process-env": "off",
		"no-sync": "off",
		"no-tabs": "off",
		"no-ternary": "off",
		"no-undefined": "off",
		"object-curly-spacing": [
			"error",
			"always"
		],
		"one-var": "off",
		"padded-blocks": "off",
		"padding-line-between-statements": [
			"error",
			{
				"blankLine": "always",
				"next": "*",
				"prev": [
					"const",
					"let",
					"var"
				]
			},
			{
				"blankLine": "any",
				"next": [
					"const",
					"let",
					"var"
				],
				"prev": [
					"const",
					"let",
					"var"
				]
			}
		],
		"quote-props": "off",
		"quotes": "off",
		"radix": "off",
		"valid-jsdoc": [
			"error",
			{
				"requireReturn": false
			}
		]
	}
}
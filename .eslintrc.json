{
	"env": {
		"browser": true,
		"es6": true,
		"node": true
	},
	"extends": ["eslint:all", "prettier", "prettier/react", "plugin:jest/recommended"],
	"parserOptions": {
		"ecmaFeatures": {
			"jsx": true
		},
		"ecmaVersion": 10,
		"sourceType": "module"
	},
	"plugins": ["jest"],
	"rules": {
		"array-element-newline": "off",
		"capitalized-comments": "off",
		"class-methods-use-this": "off",
		"eol-last": "off",
		"func-style": "off",
		"global-require": "off",
		"id-length": "off",
		"init-declarations": "off",
		"lines-between-class-members": "off",
		"multiline-comment-style": "off",
		"multiline-ternary": "off",
		"no-console": "off",
		"no-extra-parens": "off",
		"no-invalid-this": "off",
		"no-magic-numbers": "off",
		"no-shadow": "off",
		"no-sync": "off",
		"no-tabs": "off",
		"no-ternary": "off",
		"no-undefined": "off",
		"no-unused-expressions": [
			"error",
			{
				"allowShortCircuit": true,
				"allowTernary": true
			}
		],
		"one-var": "off",
		"padded-blocks": "off",
		"padding-line-between-statements": [
			"error",
			{
				"blankLine": "always",
				"next": "*",
				"prev": ["const", "let", "var"]
			},
			{
				"blankLine": "any",
				"next": ["const", "let", "var"],
				"prev": ["const", "let", "var"]
			}
		],
		"quote-props": "off",
		"quotes": "off",
		"radix": "off",
		"require-jsdoc": "off"
	}
}
